<phpunit
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://schema.phpunit.de/9.3/phpunit.xsd"
        bootstrap="php-tests/_bootstrap.php"
        backupGlobals="false"
        backupStaticAttributes="false"
        cacheTokens="false"
        colors="true"
        convertErrorsToExceptions="true"
        convertNoticesToExceptions="true"
        convertWarningsToExceptions="true"
        forceCoversAnnotation="false"
        processIsolation="false"
        stopOnError="false"
        stopOnFailure="false"
        stopOnIncomplete="false"
        stopOnSkipped="false"
        stopOnRisky="false"
        timeoutForSmallTests="1"
        timeoutForMediumTests="10"
        timeoutForLargeTests="60"
        defaultTestSuite="ALL"
        verbose="true">

    <!-- phpunit 9+ -->
    <coverage>
        <include>
            <directory suffix=".php">php-src/</directory>
            <directory suffix=".php">run/</directory>
        </include>
        <report>
            <clover outputFile="php-tests/data/clover.xml"/>
            <text outputFile="php://stdout" showUncoveredFiles="false"/>
        </report>
    </coverage>

    <!-- phpunit 8- -->
    <filter>
        <whitelist>
            <directory suffix=".php">php-src/</directory>
            <directory suffix=".php">run/</directory>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-text" target="php://stdout" showUncoveredFiles="false" />
        <log type="coverage-clover" target="php-tests/data/clover.xml" />
    </logging>

    <!-- rest as usual -->
    <php>
        <ini name="error_reporting" value="-1" />
        <ini name="intl.default_locale" value="en" />
        <ini name="intl.error_level" value="0" />
        <ini name="memory_limit" value="-1" />
    </php>

    <testsuites>
        <testsuite name="ALL">
            <directory>php-tests/CliprTests</directory>
            <directory>php-tests/LoadersTests</directory>
            <directory>php-tests/OutputsTests</directory>
            <directory>php-tests/TasksTests</directory>
            <directory>php-tests/RunTests</directory>
        </testsuite>

        <testsuite name="tasks">
            <directory>php-tests/RunTests</directory>
        </testsuite>
    </testsuites>
</phpunit>