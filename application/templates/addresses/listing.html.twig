{% extends 'base.html.twig' %}

{% block title %}Available contacts{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
		$(document).ready(function(){
			$(".modal-window").click(function(ev){
				$("#myModal .modal-body").html(decodeURIComponent(ev.currentTarget.getAttribute('data-title')));
				$("#myModal").modal('show');
			});
		});
    </script>
{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center">Available contacts</h1>
        <div class="table-container">
            {{ table|raw }}
        </div>
    </div>
    <div id="myModal" class="modal fade" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                </div>
            </div>
        </div>
    </div>
{% endblock %}
